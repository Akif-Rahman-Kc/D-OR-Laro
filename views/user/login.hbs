{{> layout}}

<body>
    
    {{> usernavbar}}

    <!-- Login Start -->
    <div class="container top-align-log">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto mt-5">
            <div class="card card-signin my-5">
              <div class="card-body">
                <h5 class="card-title text-center" style="font-weight: bold;">LOG IN</h5>
                <form  class="form-signin" action="/user_login" method="post">
                  <div class="form-label-group">
                    <label  class="mt-4" for="inputEmail">E-mail / Phone No</label>
                    <input type="email" id="inputEmail" class="form-control" name="userEmail" placeholder="E-mail / Phone No">
                    <label style="font-size: 0.8rem;" class="text-danger" for="">{{errorEmail}}</label>
                  </div>
    
                  <div class="form-label-group">
                    <label class="mt-4" for="inputPassword">Password</label>
                    <input type="password" id="inputPassword" class="form-control" name="userPass" placeholder="Password">
                    <label style="font-size: 0.8rem;" class="text-danger" for="">{{errorPass}}</label>
                    <div class="text-right">
                      <a style="font-size: 0.8rem;color: blue;" href="">Forgot password ?</a>
                    </div>
                  </div>
    
                  <button class="btn btn-lg btn-primary btn-block text-uppercase mt-5" type="submit">Log In</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    <!-- Login End -->

    {{> userfooter}}

</body>

</html>