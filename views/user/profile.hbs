{{> layout}}

<body>

    {{> usernavbar}}

    <!-- Account Details Start -->
    <div class="container top-align">
        <div class="row">
            <div class="col-12 d-flex">
                <div class="w-25 d-block">
                    <div class="bg-secondary pl-5 border">
                        <div class="d-flex text-center mb-3 mt-3">
                            <img class="rounded-0"
                                src="https://static-assets-web.flixcart.com/fk-p-linchpin-web/fk-cp-zion/img/profile-pic-male_4811a1.svg"
                                alt="">
                            <h6 class="ml-2 mt-3">{{user.userFName}} {{user.userLName}}</h6>
                        </div>
                    </div>
                    <div class="bg-secondary pl-4 border mt-4">
                        <div class="d-block mb-3 mt-3">
                            <h6 class="font-weight-bold"><i class="fas fa-user text-primary pr-2"></i>ACCOUNT DETAILS
                            </h6>
                            <div class="d-block pl-5 mt-3" style="font-size: 14px;">
                                <a href="#">Profile Information</a><br>
                                <a href="/user_address">Manage Addresses</a>
                            </div>
                        </div>
                    </div>
                    <div class="bg-secondary pl-4 border mt-4">
                        <div class="d-block mb-3 mt-3">
                            <h6 class="font-weight-bold"><i class="fas fa-folder-open text-primary pr-2"></i></i>MY
                                STUFF</h6>
                            <div class="d-grid pl-5 mt-3" style="font-size: 14px;">
                                <a href="/orders">My Orders</a>
                                <a href="">My Coupons</a>
                                <a href="/cart">My Cart</a>
                                <a href="/wishlist">My Wishlist</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-75 ml-5 bg-secondary pt-5 pl-5">
                    <div>
                        <form action="" method="post">
                            <h6>PERSONAL INFORMATIONS</h6>
                            <div class="d-flex mt-5">
                                <input class=" w-25 border bg-white pl-2" type="text" value="{{user.userFName}}">
                                <input class="w-25 ml-4 border bg-white pl-2" type="text" value="{{user.userLName}}">
                            </div>
                            <div class="d-flex mt-4">
                                <input style="width:53%;" class="border bg-white pl-2" type="email"
                                    value="{{user.userEmail}}">
                            </div>
                            <div class="d-flex mt-4">
                                <input style="width:53%;" class="border bg-white pl-2" type="text"
                                    value="+91 9562696976">
                            </div>
                            <input
                                class="w-25 btn btn-primary btn-block border-0 font-weight-bold float-right mr-5 mt-3"
                                type="submit" value="EDIT PROFILE">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- Account Details End -->

    {{> userfooter}}


</body>

</html>