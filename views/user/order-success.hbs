{{> layout}}

<body>
    
  {{> usernavbar}}

 <div class="container top-align">   
  <div class="text-center">
    <img width="100" height="100" src="/images/success.png" alt="">
    <h4 class="text-success font-weight-bold ml-2 p-3">Order Sccessfuly Placed</h4>
    <a href="/orders" class="btn btn-primary m-3">View Orders</a>
  </div>
  <div class="invoice-container mt-5" ref="document" id="html">
     <table class="w-100">
       <thead class="bg-secondary">
         <tr style="font-size: 20px;">
           <td colspan="4" class="p-3 text-left" ><img style="width: 9rem;" src="/images/logo.png" alt=""></td>
         </tr>
       </thead>
       <tbody style="background:#ffff;padding:20px;">
         <tr>
           <td colspan="4" class="p-3 text-left font-weight-bold text-dark">Hello, {{userOrder.Address.firstName}} {{userOrder.Address.lastName}}</td>
         </tr>
         <tr>
           <td colspan="4" class="p-3 text-left">Your order details</td>
         </tr>
       </tbody>
     </table>
     <table class="w-100 text-center p-3">
       <tbody>
         <tr style="color:#6c757d; font-size: 1rem;" class="font-weight-bold p-3 bg-secondary">
           <td>Order Date</td>
           <td>Payment</td>
           <td>Shipping Address</td>
         </tr>
         <tr style="font-size:0.9rem; color:#262626;" class=" p-3 bg-white">
           <td >{{date}}</td>
           <td >{{userOrder.paymentMethod}}</td>
           <td >{{userOrder.Address.locality}},{{userOrder.Address.city}}</td>
         </tr>
       </tbody>
     </table>
     <table class="w-100 text-center p-3">
       <thead>
         <tr style=" color: #6c757d;" class="p-3 bg-secondary font-weight-bold">
           <td colspan="2" >PRODUCT INFORMATION</td>
           <td >SIZE</td>
           <td >COLOR</td>
           <td >QUANTITY</td>
           <td >PRICE</td>
         </tr>
       </thead>
       <tbody class="border-bottom border-top">
        {{#each userOrder.items}}
         <tr>
           <td style="width:10%; ">
             <a href=""><img src="/images/{{this.PImage.[0]}}" style="width:100px;" /></a>
           </td>
           <td style="width:20%;text-align: center;">{{this.PName}}</td>
           <td style="width:20%;text-align:center;"> {{this.PSize}}</td>
           <td style="width:20%;text-align:center;"> {{this.PColor}}</td>
           <td style="width:20%;10px;text-align: center;">{{this.quantity}}</td>
           <td style="width:30%; ;font-weight: bold;">₹{{this.countTotal}}</td>
         </tr>
         {{/each}}
       </tbody>
     </table>
     <table class="w-100 p-3 bg-secondary">
       <tbody>
        <tr>
          <td></td>
          <td style="text-align:right;font-size:20px;">₹{{userOrder.totalAmount}}</td>
        </tr>
        <tr>
          <td></td>
          <td class="text-danger" style="text-align:right;font-size:18px;">-₹{{userOrder.discountPrice}}</td>
        </tr>
        <tr>
          <td></td>
          <td class="text-success" style="text-align:right;font-size:18px;">-₹{{userOrder.couponDiscount}}</td>
        </tr>
         <tr class="p-3 text-dark">
           <td style="font-size:23px;" class="font-weight-bold">Total</td>
           <td style="font-size:23px;text-align:right;" class="font-weight-bold">₹{{userOrder.totalLast}}</td>
         </tr>
       </tfoot>
     </table>
</div>
</div>

{{> userfooter}}

</body>