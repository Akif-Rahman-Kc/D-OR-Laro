<!DOCTYPE html>
<html lang="en">

<head>
    <title>D OR Laro Sports Hub</title>
    <!-- Favicon -->
    <link href="/images/icon.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">

    {{!-- ajax --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/javascripts/ajax.js"></script>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Magic Zoom Plus -->
    <script src="/magiczoomplus/magiczoomplus.js"></script>
    <link href="/magiczoomplus/magiczoomplus.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/coupon.css" rel="stylesheet">
</head>

</html>

<body>

    {{> usernavbar}}

    <div class="container" style="padding-top:7rem;">
        <div class="row pt-5" style=" ">
                {{#each coupon}}
                <div class="card col-lg-5 col-md-12 mt-2">
                    <div class="main">
                        <div class="co-img">
                            <img class="img-fluid" src="/images/logo.png" alt="" />
                        </div>
                        <div class="vertical"></div>
                        <div class="content">
                            <h2>{{this.couponName}}</h2>
                            <p>{{this.couponDes}}</p>
                            <h1 class="font-weight-bold">{{this.percentage}}% <span>Coupon</span></h1>
                            <p class="font-weight-bold text-danger">Expired in {{this.date}}</p>
                        </div>
                    </div>
                    <div class="copy-button">
                        <input id="{{this._id}}" type="text" readonly value="{{this.couponCode}}" />
                        <button onclick="copyIt('{{this._id}}')" class="{{this._id}}">COPY</button>
                    </div>
                </div>
                {{/each}}
        </div>
    </div>


    <!-- Coupon End -->

    {{> userfooter}}

    <script>

        function copyIt(Id) {
            let copybtn = document.getElementsByClassName(Id);
            let copyInput = document.getElementById(Id);

            copyInput.select();

            document.execCommand("copy");

            copybtn.textContent = "COPIED";
        }


    </script>

</body>