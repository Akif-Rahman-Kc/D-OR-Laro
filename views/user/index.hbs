{{> layout}}

<body>
    {{#if alerts}}
    <p id="alertMsg" hidden>a</p>
    {{/if}}
    {{> usernavbar}}

    <!-- Carousal Start -->
    <div class="container-fluid mb-5 top-align">
        <div class="row border-top px-xl-5">
            <div class="col-lg-9">
                <div id="header-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" style="height: 485px;">
                            <img class="img-fluid" src="/images/carousal-1.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Football Boots</h3>
                                    <a href="/shops" class="btn btn-light py-2 px-3">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item" style="height: 485px;">
                            <img class="img-fluid" src="/images/carousal-2.jpeg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h3 class="display-4 text-white font-weight-semi-bold mb-4">Football Jersey</h3>
                                    <a href="/shops" class="btn btn-light py-2 px-3">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                        <div class="btn btn-dark" style="width: 45px; height: 45px;">
                            <span class="carousel-control-prev-icon mb-n2"></span>
                        </div>
                    </a>
                    <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                        <div class="btn btn-dark" style="width: 45px; height: 45px;">
                            <span class="carousel-control-next-icon mb-n2"></span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousal End -->

    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                    <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Quality Product</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                    <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                    <h5 class="font-weight-semi-bold m-0">Free Shipping</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                    <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">7-Day Return</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->


    <!-- Categories Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            {{#each categories}}
            <div class="col-lg-3 col-md-6 pb-1">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 2rem;">
                    <a href="/shops" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src="/images/{{this.imgCategory.[0]}}" alt="">
                    </a>
                    <h5 class="font-weight-semi-bold m-0">{{this.Category}}</h5>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <!-- Categories End -->

    <!-- Products Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Latest Products</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            {{#each products}}
            <div class="col-lg-2 col-md-4 col-sm-6 pb-1">
                <div class="card product-item border-0 mb-4">
                    {{#if this.fav}}
                    <div class="d-flex bg-light border">
                        <a style="font-size: 1rem;" onclick="addToWishlist('{{this._id}}')"
                            class="btn btn-sm text-danger font-weight-bold ml-auto"><i id="{{this._id}}" class="fas fa-heart"></i></i></a>
                    </div>
                    {{else}}
                    <div class="d-flex bg-light border">
                        <a style="font-size: 1rem;" onclick="addToWishlist('{{this._id}}')"
                            class="btn btn-sm text-danger font-weight-bold ml-auto"><i id="{{this._id}}" class="far fa-heart"></i></a>
                    </div>
                    {{/if}}
                    
                    <a href="/shops/details?_id={{this._id}}"
                        class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="/images/{{this.PImage.[0]}}" alt="">
                    </a>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">{{this.PName}}</h6>
                        <div class="d-flex justify-content-center">
                            <h6>${{this.PPrice}}</h6>
                            <h6 class="text-muted ml-2"><del>${{this.POldPrice}}</del></h6>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <!-- Products End -->


    <!-- More Products Start -->
    <div class="container-fluid bg-secondary my-5">
        <div class="text-center pt-5 pb-5">
            <a href="/shops" class="btn btn-success">More Products</a>
        </div>
    </div>
    <!-- More Products End -->


    <!-- Brand Start -->
    <div class="container-fluid py-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Brands</span></h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-nike.png" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-adidas.jpeg" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-puma.png" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-nivia.png" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-yonex.jpeg" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-cosco.png" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-sega.jpg" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-reebok.png" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-umbro.png" alt="">
                </div>
                <div class="col-lg-1 col-md-2 border ml-3 mt-3">
                    <img class="img-fluid" src="/images/brand-under-armour.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Brand End -->

    {{> userfooter}}

    <script>
        let alerts = document.getElementById("alertMsg").innerHTML
        if(alerts == "a"){
            Swal.fire({
                    icon: 'warning',
                    title: 'Your Account is Banned',
                    text: 'Your Account is Banned not Purchased the Product!',
                    customClass: 'swal-wide',
                })
        }
    </script>

</body>