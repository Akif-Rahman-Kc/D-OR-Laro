{{> adminlayout}}

<body>
  {{> adminnavbar}}

  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">ADD PRODUCT</h2>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <form action="/admin_panel/admin_add_product" method="post" enctype="multipart/form-data"
                class="tm-edit-product-form">
                <div class="form-group mb-3">
                  <label for="name">Product Name
                  </label>
                  <input id="name" name="PName" type="text" class="form-control validate" />
                </div>
                <div class="form-group mb-3">
                  <label for="description">Description</label>
                  <input id="name" name="PDes" type="text" class="form-control validate" />
                </div>
                <div class="form-group mb-3">
                  <label for="category">Category</label>
                  <select class="custom-select tm-select-accounts" id="category" name="PCategory">
                    <option>Select Category</option>
                    {{#each category}}
                    <option>{{this.Category}}</option>
                    {{/each}}
                  </select>
                </div>

                <div class="form-group mb-3">
                  <label for="category">Sub Category</label>
                  <select class="custom-select tm-select-accounts" id="category" name="PSubCategory">
                    <option>Select Sub Category</option>
                    {{#each category}}
                    {{#each this.subCategory}}
                    <option>{{this}}</option>
                    {{/each}}
                    {{/each}}
                  </select>
                </div>
                <div class="form-group mb-3">
                    <label for="size">Size
                    </label>
                    <div class="row">
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="S" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">S</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="M" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">M</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="L" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">L</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="XL" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">XL</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="XXL" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">XXL</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="1" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">1</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="2" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">2</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="3" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">3</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="4" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">4</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="5" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">5</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="6" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">6</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="7" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">7</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="8" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">8</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="9" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">9</span>
                      </div>
                      <div class="col-3">
                        <input name="PSize" type="checkbox" value="10" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white ">10</span>
                      </div>
                    </div>
                </div>
                <div class="row">
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="price">Price
                    </label>
                    <input name="PPrice" class="form-control validate" data-large-mode="true" />
                  </div>
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="price">Old Price
                    </label>
                    <input name="POldPrice" class="form-control validate" data-large-mode="true" />
                  </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div>
                <label for="formFileLg" class="form-label text-white">Product Images</label>
                <input onchange="previewMultiple(event)" style="padding: 0.3rem;" class="form-control form-control-lg"
                  id="formFileLg" type="file"  name="PImage" multiple data-large-mode="true">
                <div class="mt-2" id="galeria">
                </div>
                <div class="form-group mb-3 mt-1">
                  <label for="brand">Brand</label>
                  <input name="PBrand" class="form-control validate" data-large-mode="true" />
                </div>
                <div class="form-group mb-3">
                  <label for="stock">Stock</label>
                  <input name="PStock" class="form-control validate" data-large-mode="true" />
                </div>
                <div class="form-group mb-3">
                    <label for="exampleColorInput" class="form-label">Colors</label>
                    <div class="row">
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="Red" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Red</span>
                      </div>
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="Blue" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Blue</span>
                      </div>
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="Black" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Black</span>
                      </div>
                      <div class="col-3 p-0">
                        <input name="PColor" type="checkbox" value="Yellow" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Yellow</span>
                      </div>
                      <div class="col-3 d-flex">
                        <input name="PColor" type="checkbox" value="Gray" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Gray</span>
                      </div>
                      <div class="col-3">
                      <input name="PColor" type="checkbox" value="Silver" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Silver</span>
                      </div>
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="White" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">White</span>
                      </div>
                      <div class="col-3 p-0">
                        <input name="PColor" type="checkbox" value="Orange" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Orange</span>
                      </div>
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="Pink" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Pink</span>
                      </div>
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="Golden" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Gold</span>
                      </div>
                      <div class="col-3">
                        <input name="PColor" type="checkbox" value="Green" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Green</span>
                      </div>
                      <div class="col-3 p-0">
                        <input name="PColor" type="checkbox" value="Brown" style="width: 1.2rem;height: 1.2rem;"/><span class="ml-1 text-white">Brown</span>
                      </div>
                    </div>
                  </div>
                <div class="form-group mb-3">
                  <label for="stock">Discount</label>
                  <input name="PDiscount" class="form-control validate" data-large-mode="true" />
                </div>
              </div>
            </div>
            <div class="col-12">
              <input type="submit" value="Submit" class="btn btn-primary btn-block text-uppercase">
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer class="tm-footer row tm-mt-small">
    <div class="col-12 font-weight-light">
      <p class="text-center text-white mb-0 px-4 small">
        Copyright &copy; <b>2022</b> All rights reserved.
      </p>
    </div>
  </footer>

  <script src="/javascripts/jquery-3.3.1.min.js"></script>
  <!-- https://jquery.com/download/ -->
  <script src="/javascripts/moment.min.js"></script>
  <!-- https://momentjs.com/ -->
  <script src="/javascripts/Chart.min.js"></script>
  <!-- http://www.chartjs.org/docs/latest/ -->
  <script src="/javascripts/bootstrap.min.js"></script>
  <!-- https://getbootstrap.com/ -->
  <script src="/javascripts/tooplate-scripts.js"></script>

  <script>
    function previewMultiple(event) {
      var array = document.getElementById("formFileLg");
      var quantos = array.files.length;
      document.getElementById("galeria").innerText += '';
      for (i = 0; i < 4; i++) {
        var urls = URL.createObjectURL(event.target.files[i]);
        document.getElementById("galeria").innerHTML += '<img style class="ml-1" src="' + urls + '">';
      }
    }
  </script>
</body>